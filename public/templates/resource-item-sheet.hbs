<form class="ezd6-item-sheet ezd6-item-sheet--resource" autocomplete="off">
  <header class="ezd6-item-header">
    <div class="ezd6-item-icon-field" data-change-label="{{localize "EZD6.Actions.Change"}}">
      <span class="ezd6-label">{{localize "EZD6.Labels.Icon"}}</span>
      <img class="ezd6-item-icon" src="{{item.img}}" data-edit="img" title="{{item.name}}">
    </div>
    <div class="ezd6-item-title-group">
      <label class="ezd6-item-field">
        <span class="ezd6-label">{{localize "EZD6.Labels.Title"}}</span>
        <input class="ezd6-item-title" type="text" name="name" value="{{itemNameValue}}" placeholder="{{localize "EZD6.Placeholders.ResourceTitle"}}" {{#if itemNameLocked}}disabled{{/if}}>
      </label>
      <label class="ezd6-item-field">
        <span class="ezd6-label">{{localize "EZD6.Labels.Tag"}}</span>
        <select class="ezd6-text-input" name="system.tag">
          {{selectOptions tagOptions selected=item.system.tag}}
        </select>
      </label>
    </div>
  </header>
  {{#if isGM}}
  <label class="ezd6-item-field ezd6-item-field--localization">
    <span class="ezd6-label">{{localize "EZD6.Labels.LocalizationId"}}</span>
    <input class="ezd6-text-input" type="text" name="system.localizationId" value="{{localizationId}}" placeholder="EZD6.Compendium.">
  </label>
  {{/if}}

  <section class="ezd6-item-body">
    <label class="ezd6-item-field">
      <span class="ezd6-label">{{localize "EZD6.Labels.Description"}}</span>
      <textarea class="ezd6-textarea" name="system.description" placeholder="{{localize "EZD6.Placeholders.ResourceDescription"}}" {{#if itemDescriptionLocked}}disabled{{/if}}>{{itemDescriptionValue}}</textarea>
    </label>
    <div class="ezd6-item-field ezd6-item-field--quantity">
      <span class="ezd6-label">{{localize "EZD6.Labels.Value"}}</span>
      <div class="ezd6-quantity-picker ezd6-resource-value-picker" data-count="{{item.system.value}}" data-key="value">
        <button class="ezd6-qty-btn" type="button" data-delta="-1">-</button>
        <div class="ezd6-resource-value-display"></div>
        <button class="ezd6-qty-btn" type="button" data-delta="1">+</button>
      </div>
      <input type="hidden" name="system.value" value="{{item.system.value}}">
    </div>
    <div class="ezd6-item-field ezd6-item-field--quantity">
      <span class="ezd6-label">{{localize "EZD6.Labels.MaxValue"}}</span>
      <div class="ezd6-quantity-picker ezd6-resource-max-picker" data-count="{{item.system.maxValue}}" data-key="maxValue">
        <button class="ezd6-qty-btn" type="button" data-delta="-1">-</button>
        <div class="ezd6-resource-value-display"></div>
        <button class="ezd6-qty-btn" type="button" data-delta="1">+</button>
      </div>
      <input type="hidden" name="system.maxValue" value="{{item.system.maxValue}}">
    </div>
    <label class="ezd6-item-field">
      <span class="ezd6-label">{{localize "EZD6.Labels.ReplenishLogic"}}</span>
      <select class="ezd6-text-input" name="system.replenishLogic">
        {{selectOptions replenishLogicOptions selected=item.system.replenishLogic}}
      </select>
    </label>
    <label class="ezd6-item-field ezd6-item-field--replenish {{#unless replenishEnabled}}is-hidden{{/unless}}">
      <span class="ezd6-label">{{localize "EZD6.Labels.ReplenishTag"}}</span>
      <select class="ezd6-text-input" name="system.replenishTag">
        {{selectOptions tagOptions selected=item.system.replenishTag}}
      </select>
    </label>
    <div class="ezd6-item-field ezd6-item-field--quantity ezd6-item-field--replenish {{#unless replenishEnabled}}is-hidden{{/unless}}">
      <span class="ezd6-label">{{localize "EZD6.Labels.ReplenishCost"}}</span>
      <div class="ezd6-quantity-picker ezd6-replenish-cost-picker" data-count="{{item.system.replenishCost}}">
        <button class="ezd6-qty-btn" type="button" data-delta="-1">-</button>
        <input class="ezd6-number-input ezd6-quantity-input" type="number" min="1" max="100" step="1" name="system.replenishCost" value="{{item.system.replenishCost}}">
        <button class="ezd6-qty-btn" type="button" data-delta="1">+</button>
      </div>
    </div>
    <div class="ezd6-item-field ezd6-item-field--dice">
      <span class="ezd6-label">{{localize "EZD6.Labels.DiceToRoll"}}</span>
      <div class="ezd6-ability-dice-picker ezd6-resource-dice-picker" data-count="{{item.system.numberOfDice}}">
        <button class="ezd6-ability-dice-btn" type="button" data-delta="-1">-</button>
        <div class="ezd6-ability-dice-stack"></div>
        <button class="ezd6-ability-dice-btn" type="button" data-delta="1">+</button>
      </div>
      <input type="hidden" name="system.numberOfDice" value="{{item.system.numberOfDice}}">
    </div>
    <label class="ezd6-item-field ezd6-item-field--checkbox">
      <input type="checkbox" name="system.publicDisplay" {{#if item.system.publicDisplay}}checked{{/if}}>
      <span class="ezd6-label">{{localize "EZD6.Labels.PublicDisplay"}}</span>
    </label>
  </section>
</form>
